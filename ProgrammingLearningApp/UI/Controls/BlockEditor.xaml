<UserControl x:Class="ProgrammingLearningApp.UI.Controls.BlockEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Block Palette -->
        <Border Grid.Column="0" BorderBrush="#cccccc" BorderThickness="1" Background="#f9f9f9">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#e0e0e0" Padding="10">
                    <TextBlock Text="Command Blocks" FontWeight="Bold" FontSize="14"/>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="PalettePanel" Margin="10">
                        <!-- Move Block -->
                        <Border Background="#4CAF50" CornerRadius="5" Padding="10" Margin="0,5" 
                                Cursor="Hand" 
                                MouseLeftButtonDown="MoveBlock_MouseDown"
                                MouseMove="PaletteBlock_MouseMove"
                                Tag="Move">
                            <StackPanel>
                                <TextBlock Text="Move" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Move forward N steps" FontSize="10" Foreground="White" Opacity="0.8"/>
                            </StackPanel>
                        </Border>

                        <!-- Turn Left Block -->
                        <Border Background="#2196F3" CornerRadius="5" Padding="10" Margin="0,5" 
                                Cursor="Hand" 
                                MouseLeftButtonDown="TurnLeftBlock_MouseDown"
                                MouseMove="PaletteBlock_MouseMove"
                                Tag="TurnLeft">
                            <StackPanel>
                                <TextBlock Text="Turn Left" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Rotate 90 degrees left" FontSize="10" Foreground="White" Opacity="0.8"/>
                            </StackPanel>
                        </Border>

                        <!-- Turn Right Block -->
                        <Border Background="#FF9800" CornerRadius="5" Padding="10" Margin="0,5" 
                                Cursor="Hand" 
                                MouseLeftButtonDown="TurnRightBlock_MouseDown"
                                MouseMove="PaletteBlock_MouseMove"
                                Tag="TurnRight">
                            <StackPanel>
                                <TextBlock Text="Turn Right" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Rotate 90 degrees right" FontSize="10" Foreground="White" Opacity="0.8"/>
                            </StackPanel>
                        </Border>

                        <!-- Repeat Block -->
                        <Border Background="#9C27B0" CornerRadius="5" Padding="10" Margin="0,5" 
                                Cursor="Hand" 
                                MouseLeftButtonDown="RepeatBlock_MouseDown"
                                MouseMove="PaletteBlock_MouseMove"
                                Tag="Repeat">
                            <StackPanel>
                                <TextBlock Text="Repeat" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Repeat N times" FontSize="10" Foreground="White" Opacity="0.8"/>
                            </StackPanel>
                        </Border>

                        <!-- Repeat Until Block -->
                        <Border Background="#673AB7" CornerRadius="5" Padding="10" Margin="0,5" 
                                Cursor="Hand" 
                                MouseLeftButtonDown="RepeatUntilBlock_MouseDown"
                                MouseMove="PaletteBlock_MouseMove"
                                Tag="RepeatUntil">
                            <StackPanel>
                                <TextBlock Text="Repeat Until" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Repeat until condition" FontSize="10" Foreground="White" Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#cccccc"/>

        <!-- Work Area -->
        <Border Grid.Column="2" BorderBrush="#cccccc" BorderThickness="1" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#e0e0e0" Padding="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Program Blocks" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <Button Content="Clear All" Margin="20,0,0,0" Padding="10,5" 
                                Click="ClearAll_Click" Background="#f44336" Foreground="White"/>
                    </StackPanel>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="WorkAreaPanel" 
                                Margin="20"
                                MinHeight="300"
                                Background="Transparent"
                                AllowDrop="True"
                                Drop="WorkArea_Drop"
                                DragOver="WorkArea_DragOver">
                        <TextBlock x:Name="EmptyMessage" 
                                   Text="Drag blocks here to build your program"
                                   FontStyle="Italic" 
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,50,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
